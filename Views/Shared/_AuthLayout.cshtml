<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Investix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/authlayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ViewMyAssetDev.style.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div id="overlay"></div>
    
    <header>
        <nav class="navbar navbar-expand-sm  mb-0">
            <div class="container-fluid mx-5">
                <a class="navbar-brand" asp-area="" asp-controller="Authenticated" asp-action="Main"><img src="~/img/logo.png" style="width:180px;height:70px;" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex ms-3 justify-content-between">
                    <ul id="navbar-list" class="navbar-nav fw-bold">
                        <li class="nav-item">
                            <a class="nav-link mx-1" asp-area="" asp-controller="Authenticated" asp-action="Main">홈</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-1" asp-area="" asp-controller="Authenticated" asp-action="MyAsset">자산</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-1" asp-area="" asp-controller="Auth" asp-action="MyPage">마이페이지</a>
                        </li>
                    </ul>
                    <div id="searchDiv" class="me-5" style="margin-left:30px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ms-3 fw-bold text-white lucide lucide-search h-4 w-4 shrink-0 opacity-50"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"></path></svg>
                        <input type="search" autocomplete="off"  id="searchBoxPrev" class="form-control" placeholder="종목 코드로 검색" style="width:550px;height:45px;" />
                    </div>
                    <form method="post" asp-controller="Auth">
                    <button class="btn btn-light" asp-action="Logout" style="margin:5px 2px;border-radius:20px;border:1px solid black;">로그아웃</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <form id="searchForm">
        <div id="searchForm-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"   stroke-linecap="round" stroke-linejoin="round" class="ms-4 fw-bold text-white lucide lucide-search h-4 w-4shrink-0     opacity-50"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"></path></svg>
            <input type="search" autocomplete="off" id="searchBox" class="form-control" placeholder="종목 코드로 검색" />
        </div>
        <ul class="" id="suggestionList"></ul>
    </form>
    <div>
        @RenderBody()
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/autocomplete.js"></script>
    <script src="~/js/autocomplete_2.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
